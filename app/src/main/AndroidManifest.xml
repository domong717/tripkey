<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 인터넷 사용 권한 추가 -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- 특정 앱(카카오톡 등)만 조회할 수 있도록 queries 추가 -->
    <queries>
        <package android:name="com.kakao.talk" />  <!-- 카카오톡 패키지 -->
    </queries>

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TripKey"
        tools:targetApi="31">

        <!-- LoginActivity를 앱 실행 시 가장 먼저 보이도록 설정 -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="로그인 화면">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 로그인 성공 시 바로 MBTITestActivity로 이동 -->
        <activity
            android:name=".MBTITestActivity"
            android:exported="true"
            android:label="@string/app_name"/>

        <!-- MainActivity (MBTI 테스트 후 결과 페이지라면 필요) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"/>

        <!-- 회원가입 화면 -->
        <activity
            android:name=".RegisterActivity"
            android:exported="true"
            android:label="@string/app_name"/>

        <!-- 카카오 SDK 초기화를 위한 메타데이터 -->
        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="@string/kakao_native_app_key"/>

        <!-- 카카오 로그인 Redirect URI 지원 -->
        <activity
            android:name="com.kakao.sdk.auth.AuthCodeHandlerActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="@string/kakao_scheme"/>
            </intent-filter>
        </activity>

    </application>
</manifest>
