<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.TripKey" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/toolbar</item>
        <item name="colorPrimaryVariant">@color/mid_green</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="actionBarSize">80dp</item>
        <!-- 툴바 제목 글자 색상 및 크기 설정 -->
        <item name="android:textColorPrimary">@color/black</item> <!-- 글자 색상을 검정색으로 설정 -->
        <item name="android:textSize">20sp</item> <!-- 글자 크기를 20sp로 설정 -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    </style>
</resources>